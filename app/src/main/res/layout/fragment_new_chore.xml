<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NewChore">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/lblParentBalance6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Chore"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <LinearLayout
        android:id="@+id/amount2"
        android:layout_width="410dp"
        android:layout_height="41dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/icon2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description2">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtAmount"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:ems="10"
            android:hint="Enter amount to be paid for chore"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon2"
        android:layout_width="410dp"
        android:layout_height="35dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttons2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount2">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Icon:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerIcon"
            android:layout_width="344dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons2"
        android:layout_width="409dp"
        android:layout_height="77dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon2">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="209dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:background="@drawable/bigdarkbuton"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonyellowbig"
            android:text="Create" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/description2"
        android:layout_width="409dp"
        android:layout_height="43dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/amount2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblParentBalance6">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chore"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="409dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:ems="10"
            android:hint="Enter chore"
            android:inputType="textPersonName" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>