<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_koala"
                android:layout_width="match_parent"
                android:layout_height="1123dp"
                android:layout_marginTop="0dp"
                android:background="#c1c1c1"
                android:src="@drawable/koala"/>


            <ImageView
                android:id="@+id/imageView_platypus"
                android:layout_width="match_parent"
                android:layout_height="1123dp"
                android:layout_marginTop="0dp"
                android:background="#c1c1c1"
                android:src="@drawable/platypus"/>

            <ImageView
                android:id="@+id/imageView_bear"
                android:layout_width="match_parent"
                android:layout_height="1123dp"
                android:layout_marginTop="0dp"
                android:background="#c1c1c1"
                android:src="@drawable/bear"/>
            <ImageView
                android:id="@+id/imageView_chicken"
                android:layout_width="match_parent"
                android:layout_height="1123dp"
                android:layout_marginTop="0dp"
                android:background="#c1c1c1"
                android:src="@drawable/roastchicken"/>

            <ImageView
                android:id="@+id/imageView_kangaroo"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginTop="0dp"
                android:background="#c1c1c1"
                android:src="@drawable/kangaroo_new" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>