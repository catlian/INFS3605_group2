<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Bordered" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/text_border</item>
    </style>

    <style name= "ParentTitleText" parent = "@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ParentSubtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name= "ChildTitleText" parent = "@android:style/TextAppearance.Large">
        <item name="android:fontFamily">@font/couriernew</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ChildSubtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/trebuchetms</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
